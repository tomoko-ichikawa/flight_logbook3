<h2>マイページ編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="circle-icon">
    <% if current_user.persisted? && current_user.icon? %>
      <%= image_tag current_user.icon.to_s %>
      <label><%= f.check_box :remove_icon %>画像を削除</label>
    <% else %>
      <%- image_tag current_user.icon.to_s %>
      <%= f.hidden_field :icon_cache %>
    <% end %>
      <%= f.file_field :icon %>
  </div>

  <div class ="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div><br>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード %> <i>(パスワードを変更しない場合は空白のままで)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div><br>

  <div class="field">
    <%= f.label :新しいパスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br>

  <div class="field">
    <%= f.label :今のパスワード %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<br>
<h3>アカウント削除する</h3>
<p>Unhappy? <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
