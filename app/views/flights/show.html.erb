<body class="show">
<div class="boarding-pass">
  <div class = "airline">
    <%= @flight.airline %>
    <%= @flight.seat_class %>&emsp;
  </div>
  <hr>
  <table class="boarding-pass2">
    <tr>
      <!-- <td rowspan="7" class="qr"><%= image_tag('qr.jpg') %></td> -->
      <td colspan="4" class="passenger_name"><%= @flight.user.name %></td>
    </tr>
    <tr> 
      <td>Flight</td>
      <td>From</td>
      <td>To</td>
      <td>Date</td>
    </tr>
    <tr class="flight_detail">
      <td><%= @flight.flight_number %></td>
      <td><%= @flight.departure_airport %></td>
      <td><%= @flight.arrival_airport %></td>
      <td><%= @flight.departure_date %></td>
    </tr>
    <tr>
      <td class="title">Terminal&emsp; </td>
      <td class="title">Gate&emsp; </td>
      <td class="title">Departure time&emsp; </td>
      <td class="title">Seat&emsp; </td>
      <!-- <td class="title">Boarding Group&emsp; </td> -->
    </tr>
    <tr class="flight_detail">
      <td></td>&emsp; 
      <td></td>&emsp;         
      <td class="details"><%= @flight.actual_departure_time.strftime("%Y-%m-%d %H:%M") %>&emsp; </td>
      <td class="details"><%= @flight.seat_number %>&emsp; </td>
      <td></td>&emsp;
      </tr>
    <tr>
      <td colspan="5">YOU ARE INVITED TO THE FLIGHT LOGBOOK</td>
    </tr>
    <tr>
      <td colspan="5">GATE CLOSES 10 MINS BEFORE DEPARTURE</td>
    </tr>
  </table>
</div>


<table class = "show_flight">
  <tr>
    <td><%= image_tag('time.png', width: '20') %>&nbsp; 到着時間</td> <td><%= @flight.actual_arrival_time.strftime("%Y-%m-%d %H:%M") %></td> 
    <td><%= image_tag('airplane2.png', width: '20') %>&nbsp; 機種</td> <td><%= @flight.aircraft_type %></td>
  </tr>
  <tr>
    <td><%= image_tag('hourglass.png', width: '20') %>&nbsp;  飛行時間</td> <td><%= @flight.flight_time %></td> <td><%= image_tag('departure.png', width: '20') %>&nbsp; 飛行距離</td> <td><%= @flight.flight_mile %></td>
  </tr>
  <tr>
    <td><%= image_tag('en.png', width: '20') %>&nbsp; 運賃</td> <td><%= @flight.fare %></td> <td><%= image_tag('seat.png', width: '30') %>&nbsp; 予約クラス</td> <td> <%= @flight.booking_class %></td>
  </tr>
  <tr>
    <td><%= image_tag('airplane3.png', width: '20') %>&nbsp; 獲得マイル</td> <td><%= @flight.getting_mile %></td> <td><%= image_tag('p.png', width: '20') %>&nbsp; 獲得ポイント</td> <td><%= @flight.getting_point %></td>
  </tr>
  <tr>
    <td><%= image_tag('suitcase.png', width: '20') %>&nbsp; 総獲得マイル</td> <td><%= @flight.total_getting_mile %></td> <td><%= image_tag('point2.png', width: '20') %>&nbsp; 総獲得ポイント</td> <td><%= @flight.total_getting_point %></td>
  </tr>
</table>

<table class="show_flight_photo">
  <tr>
    <td><%= image_tag('note.png', width: '20') %>&nbsp; 感想
     </td>
  </tr>
  <tr class="review">
    <td><%= @flight.review %></td>
  </tr>
  <tr>
    <td><%= image_tag('camera.png', width: '20') %>&nbsp; </td>
  </tr>
  <tr>
    <td><%= image_tag(@flight.photo1.url) if @flight.photo1.present? %></td>
  </tr>
  <tr>
    <td><%= image_tag('camera.png', width: '20') %>&nbsp; </td>
  </tr>
  <tr>
    <td><%= image_tag(@flight.photo2.url) if @flight.photo2.present? %></td>
  </tr>
  <tr>
    <td><%= image_tag('camera.png', width: '20') %>&nbsp; </td>
  </tr>
  <tr>
    <td><%= image_tag(@flight.photo3.url) if @flight.photo3.present? %></td>
  </tr>
</table>

<table class="edit">
  <tr>
    <% if user_signed_in? %>
      <td><% if @flight.favorited_by?(current_user) %>
        <%= link_to image_tag('heart.png', width: '20'), flight_favorites_path(@flight.id), method: :delete %></td>
      <% else %>
        <td><%= link_to image_tag('heart_w.png', width: '20'),flight_favorites_path(flight.id), method: :post %></td>
      <% end %>
    <% end %>
    <td><%= @flight.favorites.count %></td>

        <!-- <td><%= link_to image_tag('ticket.png', width: '50'), flight_path(@flight.id) %></td> -->
    <% if current_user && current_user.id == @flight.user.id %>
      <td><%= link_to image_tag('pencil.png', width: '20'),  edit_flight_path(@flight.id) %></td>
      <td><%= link_to image_tag('garbage.png', width: '20'), flight_path(@flight.id),method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>
  </tr>
</table>

<br>
<table>  
<h2>コメント</h2>
<% @comments.each do |comment| %>
<hr>
  <p><%= image_tag('passport.png', width: '20') %>&nbsp; <%= comment.user.name %></p>
  <p><%= image_tag('comment.png', width: '20') %>&nbsp; <%= comment.content %></p>
  <p><% if current_user && current_user.id == comment.user.id %>
    <%= link_to image_tag('garbage.png', width: '20'), flight_comments_path(flight_id: @flight, id: comment.id),method: :delete ,data: { confirm: '本当に削除していいですか？' } %></p>
  <% end %>
  <hr>
<% end %>

<div class="comment">
<%= form_for([@flight, @comment]) do |f| %>
  <%= f.text_field :content %>
  <br><%= f.submit "コメントする" %>
<% end %>
</div>
</table>

</body>