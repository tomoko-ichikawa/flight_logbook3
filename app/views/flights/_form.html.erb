<%= form_with(model: @flight,local: true, url: choose_new_or_edit) do |form| %>
<div class = "flight">
<%= form.label :"搭乗日" %>
<%= form.text_field :departure_date %>
</div>
<div class = "flight">
<%= form.label :"航空会社" %>
<%= form.text_field :airline %>
</div>
<div class = "flight">
<%= form.label :"便名" %>
<%= form.text_field :flight_number %>
</div>
<div class = "flight">
<%= form.label :"機種" %>
<%= form.text_field :aircraft_type %>
</div>
<div class = "flight">
<%= form.label :"座席クラス" %>
<%= form.text_field :seat_class %>
</div>
<div class = "flight">
<%= form.label :"座席番号" %>
<%= form.text_field :seat_number %>
</div>
<div class = "flight">
<%= form.label :"出発空港" %>
<%= form.text_field :departure_airport %>
</div>
<div class = "flight">
<%= form.label :"出発予定時刻" %>
<%= form.text_field :departure_estimated_time %>
</div>
<div class = "flight">
<%= form.label :"出発時刻" %>
<%= form.text_field :actual_departure_time %>
</div>
<div class = "flight">
<%= form.label :"到着空港" %>
<%= form.text_field :arrival_airport %>
</div>
<div class = "flight">
<%= form.label :"到着予定時刻" %>
<%= form.text_field :arrival_estimated_time %>
</div>
<div class = "flight">
<%= form.label :"到着時刻" %>
<%= form.text_field :actual_arrival_time %>
</div>
<div class = "flight">
<%= form.label :"飛行時間" %>
<%= form.text_field :flight_time %>
</div>
<div class = "flight">
<%= form.label :"飛行距離" %>
<%= form.text_field :flight_mile %>
</div>
<div class = "flight">
<%= form.label :"運賃" %>
<%= form.text_field :fare %>
</div>
<div class = "flight">
<%= form.label :"予約クラス" %>
<%= form.text_field :booking_class %>
</div>
<div class = "flight">
<%= form.label :"獲得マイル" %>
<%= form.text_field :getting_mile %>
</div>
<div class = "flight">
<%= form.label :"獲得ポイント" %>
<%= form.text_field :getting_point %>
</div>
<div class = "flight">
<%= form.label :"感想" %>
<%= form.text_field :review %>
</div>
<div class = "flight">
<%= form.label :"写真１" %>
<%= form.file_field :photo1 %>
<%= photo1_tag(@flight.photo1.url) if @flight.photo1 && @flight.photo1.url %>
<%= form.hidden_field :photo1_cache %>
</div>
<div class = "flight">
<%= form.label :"写真２" %>
<%= form.file_field :photo2 %>
</div>
<div class = "flight">
<%= form.label :"写真３" %>
<%= form.file_field :photo3 %>
</div>
<div class = "flight">
<%= form.label :"総獲得マイル" %>
<%= form.text_field :total_getting_mile %>
</div>
<div class = "flight">
<%= form.label :"総獲得ポイント" %>
<%= form.text_field :total_getting_point %>
</div>

<%= form.submit %>
<% end %>