<body class="new">
<%= form_with(model: @flight,local: true, url: choose_new_or_edit) do |form| %>
  <div class="boarding-pass">
    <div class = "airline">
      <%= form.label :"航空会社" %><%= form.text_field :airline %>
      <%= form.label :"座席クラス" %><%= form.text_field :seat_class %>
    </div>
    <hr>
    <table class="boarding-pass2">
      <tr>
        <td rowspan="8" class="qr"><%= image_tag('qr.jpg') %></td>
      </tr>
      <td colspan="5" class="passenger_name"></td>
      <tr> 
        <td colspan="2">Flight(便名)</td>
        <td>From(出発空港)</td>
        <td>To(到着空港)</td>
        <td>Date(搭乗日)</td>
      </tr>
      <tr class="flight_detail">
        <td colspan="2"><%= form.text_field :flight_number %></td>
        <td><%= form.text_field :departure_airport %></td>
        <td><%= form.text_field :arrival_airport %></td>
        <td><%= form.date_field :departure_date %></td>
      </tr>
      <tr>
        <td class="title">Terminal&emsp; </td>
        <td class="title">Gate&emsp; </td> 
        <td class="title">Departure time(搭乗時間)&emsp; </td>
        <td class="title">Seat(座席番号)&emsp; </td>
        <td class="title">Boarding Group&emsp; </td>
      </tr>
      <tr class="flight_detail">
        <td></td>&emsp; 
        <td></td>&emsp;         
        <td class="details"><%= form.datetime_select :actual_departure_time %></td>
        <td class="details"><%= form.text_field :seat_number %></td>
        <td></td>&emsp;
        </tr>
      <tr>
        <td colspan="5">YOU ARE INVITED TO THE FLIGHT LOGBOOK</td>
      </tr>
      <tr>
        <td colspan="5">GATE CLOSES 10 MINS BEFORE DEPARTURE</td>
      </tr>
    </table>
  </div>

  <table class = "show_flight">
    <tr>
      <td><%= image_tag('time.png', width: '30') %>&nbsp; 到着時間</td> <td><%= form.datetime_select :actual_arrival_time %></td> 
      <td><%= image_tag('airplane2.png', width: '30') %>&nbsp; 機種</td> <td><%= form.text_field :aircraft_type %></td>
    </tr>
    <tr>
      <td><%= image_tag('hourglass.png', width: '30') %>&nbsp;  飛行時間</td> <td><%= form.text_field :flight_time %></td> 
      <td><%= image_tag('departure.png', width: '30') %>&nbsp; 飛行距離</td> <td><%= form.text_field :flight_mile %></td>
    </tr>
    <tr>
      <td><%= image_tag('en.png', width: '30') %>&nbsp; 運賃</td> <td><%= form.text_field :fare %></td> 
      <td><%= image_tag('seat.png', width: '30') %>&nbsp; 予約クラス</td> <td><%= form.text_field :booking_class %></td>
    </tr>
    <tr>
      <td><%= image_tag('airplane3.png', width: '30') %>&nbsp; 獲得マイル</td> <td><%= form.text_field :getting_mile %></td> 
      <td><%= image_tag('p.png', width: '30') %>&nbsp; 獲得ポイント</td> <td><%= form.text_field :getting_point %></td>
    </tr>
  </table>

 
  <table class = "show_flight">
    <tr>
      <td><%= image_tag('note.png', width: '30') %>&nbsp; 感想 <%= form.text_field :review %></td>
    </tr>
    <tr>
      <td><%= image_tag('camera.png', width: '30') %>&nbsp;  <%= form.file_field :photo1 %>
        <%= image_tag(@flight.photo1.url) if @flight.photo1 && @flight.photo1.url %>
        <%= form.hidden_field :photo1_cache %></td>
    </tr>
    <tr>
      <td><%= image_tag('camera.png', width: '30') %>&nbsp; <%= form.file_field :photo2 %>
        <%= image_tag(@flight.photo2.url) if @flight.photo2 && @flight.photo2.url %>
        <%= form.hidden_field :photo2_cache %></td>
    </tr>
    <tr>
      <td><%= image_tag('camera.png', width: '30') %>&nbsp; <%= form.file_field :photo3 %>
      <%= image_tag(@flight.photo3.url) if @flight.photo3 && @flight.photo3.url %>
      <%= form.hidden_field :photo3_cache %></td>
    </tr>
  </table>

  <%= form.submit %>
<% end %>
</body>