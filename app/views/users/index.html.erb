<br>

<div class="users_index">
  <h1>ユーザー一覧</h1>
  <br>
  <%= search_form_for @q do |f| %>
  	<%= f.label :name, "名前" %>
  	<%= f.search_field :name_cont %>
  	<%= f.submit "検索" %>
  <% end %>

  <hr>

  <% @users.each do |user| %>
  	<div class ="circle-icon">
  		<p><%= image_tag user.icon.to_s %></p>
  	</div>
  	<p class="profile"><span><%= image_tag('passport.png', width: '20') %>&nbsp; 名 前　</span><%= link_to user.name, user_path(user.id) %></p>
  	<!-- <p><span><%= image_tag('mail.png', width: '20') %>&nbsp; email　</span><%= link_to user.email, user_path(user.id) %></p> -->
  	<hr>
  <% end %>
  <br><br><br>
</div>